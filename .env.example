# ==========================================
# 企业办公系统 - 环境变量配置
# ==========================================

# Nextcloud 管理员账号
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=Admin@2025!

# 信任的域名（多个用空格分隔）
NEXTCLOUD_TRUSTED_DOMAINS=localhost 127.0.0.1 192.168.*.* 10.*.*.* *.local

# 外部访问地址（用于生成链接）
OVERWRITEHOST=192.168.1.100:8080

# 数据库配置
POSTGRES_DB=nextcloud
POSTGRES_USER=nextcloud
POSTGRES_PASSWORD=NextcloudDB@2025!

# OnlyOffice JWT 密钥（用于安全通信）
ONLYOFFICE_JWT_SECRET=OnlyOfficeSecretKey2025!

# 可选：S3 备份配置（留空则只备份到本地）
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# 时区设置
TZ=Asia/Shanghai
